#:kivy 2.1.0

<CraneImage>:
    pos: self.pos
    size: self.size

<CraneGui>:
    base_color: 0, 0, 0, 1
    button_on_off_size: 150, 150
    input_size: 100, 50
    image_size: root.center_x / 4, root.center_y / 4

    CraneImage:
        pos: root.center_x / 4, root.height * 3 / 4
        size: root.center_x / 4, root.center_y / 4
        source: "crane_upper_view.jpg"

    Label:
        color: root.base_color
        font_size: 28
        center_x: root.width * 3 / 4
        top: root.top - 25
        text: "Variação XXX"

    TextInput:
        pos: root.width * 3 / 4, root.height * 3 / 4
        size: root.input_size

    Button:
        size: root.button_on_off_size
        center_x: root.width * 1 / 4
        center_y: root.height * 1 / 4
        text: "OFF"

    Button:
        size: root.button_on_off_size
        center_x: root.width * 3 / 4
        center_y: root.height * 1 / 4
        text: "ON"
