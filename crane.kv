#:kivy 2.1.0

<CraneImage>:
    pos: self.pos
    size: self.size

<CraneGui>:
    base_color: 0, 0, 0, 1
    button_on_off_size: 150, 150
    input_size: 100, 50
    image_size: root.center_x / 4, root.center_y / 4

    CraneImage:
        pos: root.center_x / 4, root.height * 3 / 4
        size: root.width / 4, root.height / 6
        source: "crane_upper_view.jpg"

    Label:
        id: upper_arrow_rotation
        color: root.base_color
        font_size: 28
        center_x: root.width * 3 / 4
        top: root.top
        text: "Variação Rotação Lança"

    Label:
        id: label_input_rotation
        color: root.base_color
        font_size: 40
        center_x: root.width * 3 / 4
        top: root.top - upper_arrow_rotation.height
        text: "^"

    TextInput:
        pos: root.width * 3 / 4 - label_input_rotation.width / 2, root.height * 3 / 4
        size: root.input_size

    CraneImage:
        id: down_arrow_img
        pos: root.center_x / 4, root.height * 2 / 4
        size: root.width / 4, root.height / 6
        source: "crane_upper_view.jpg"

    Label:
        id: upper_arrow_down
        color: root.base_color
        font_size: 28
        center_x: root.width * 3 / 4
        top: down_arrow_img.top
        text: "Variação Descida Lança"

    Label:
        id: label_input_down
        color: root.base_color
        font_size: 40
        center_x: root.width * 3 / 4
        top: upper_arrow_down.top - upper_arrow_down.height
        text: "^"

    TextInput:
        pos: root.width * 3 / 4 - label_input_down.width / 2, root.height * 2 / 4
        size: root.input_size

    Button:
        size: root.button_on_off_size
        center_x: root.width * 1 / 4
        center_y: root.height * 1 / 4
        text: "OFF"

    Button:
        size: root.button_on_off_size
        center_x: root.width * 3 / 4
        center_y: root.height * 1 / 4
        text: "ON"
